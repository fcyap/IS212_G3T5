# Server Configuration
PORT=3001
NODE_ENV=development
LOG_REQUEST_ENTRY=true
SESSION_SECRET=your_secure_random_session_secret_here
SESSION_COOKIE_NAME=spm_session
SESSION_IDLE_MINUTES=15

# Database Configuration
# Using transaction pooler (port 5432) instead of session pooler (port 6543)
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres

# Alternative formats if above doesn't work:
# Session pooler (port 6543): DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
# Direct connection: DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Additional Supabase Configuration (LT)
SUPABASE_URL_LT=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SECRET_KEY_LT=your_supabase_secret_key_here
